<%- include('header_other') -%>
<form post="/anyag/<%= megrendeles._id %>/add" method="POST">
    <h1>Anyag hozzáadása</h1>

    <label for="anyagNeve">Anyag neve:</label>
    <input type="text" id="anyagNeve" name="anyagNeve" required>

    <label for="anyagMennyiseg">Anyagmennyiség (t):</label>
    <input type="number" id="anyagMennyiseg" name="anyagMennyiseg" required min="0" oninput="validity.valid||(value='');">

    <label for="anyagHelye">Anyag Helye:</label>
    <input type="text" id="anyagHelye" name="anyagHelye" required>
    
    <label for="felhasznalasiTerulet">Felhasználási terület:</label>
    <input type="text" id="felhasznalasiTerulet" name="felhasznalasiTerulet" required>

    <div>
        <button type="submit">Hozzáadás</button>
        <button type="button" onclick="goBack()">Vissza</button>
    </div>
</form>

<script>
    function goBack() {
        window.location.href = "/anyag/<%= megrendeles._id %>"
    }
</script>
<%- include('footer') -%>